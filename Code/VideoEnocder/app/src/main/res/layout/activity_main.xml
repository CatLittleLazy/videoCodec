<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <VideoView
      android:id="@+id/videoview"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      app:layout_constraintTop_toTopOf="parent"/>
  <Button
      android:id="@+id/projection"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="MEDIA_PROJECTION_SERVICE"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/testRecorderMPEG2TS"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="testRecorderMPEG2TS"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/projection" />

  <Button
      android:id="@+id/stop_encoder"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="stopEncoder"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/testRecorderMPEG2TS" />
</androidx.constraintlayout.widget.ConstraintLayout>